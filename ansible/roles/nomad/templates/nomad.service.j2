[Unit]
Description=nomad agent
Documentation=https://nomadproject.io/docs/
After=network-online.target
Wants=network-online.target
StartLimitBurst=3
StartLimitIntervalSec=10
ConditionFileNotEmpty={{ nomad_configd_directory }}/nomad.hcl

[Service]
User={{ nomad_user }}
Group={{ nomad_group }}
ExecStart={{ nomad_install_directory }}/nomad agent -config={{ nomad_configd_directory }}

ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
KillSignal=SIGINT
LimitNOFILE=infinity
LimitNPROC=infinity
Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
