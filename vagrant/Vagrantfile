VAGRANTFILE_API_VERSION = "2"

base_dir = File.expand_path(File.dirname(__FILE__))
cluster = {
  "node1" => { :ip => "192.168.56.11",  :cpus => 1, :mem => 1024 },
  "node2" => { :ip => "192.168.56.12", :cpus => 1, :mem => 1024 },
  "node3" => { :ip => "192.168.56.13", :cpus => 1, :mem => 1024 },
}
vm_box = "debian/bullseye64"

# required_plugins = %w(vagrant-share vagrant-vbguest vagrant-libvirt vagrant-cachier)
required_plugins = %w(vagrant-share vagrant-libvirt vagrant-cachier)

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  plugins_to_install = required_plugins.select { |plugin| not Vagrant.has_plugin? plugin }
  if not plugins_to_install.empty?
    puts "Installing plugins: #{plugins_to_install.join(' ')}"
    if system "vagrant plugin install #{plugins_to_install.join(' ')}"
      exec "vagrant #{ARGV.join(' ')}"
    else
      abort "Installation of one or more plugins has failed. Aborting."
    end
  end

  if Vagrant.has_plugin?("vagrant-cachier")
    config.cache.scope = :machine
    config.cache.enable :apt
  end

  cluster.each_with_index do |(hostname, info), index|
    config.vm.define hostname do |cfg|

      cfg.ssh.insert_key = false

      cfg.vm.provider :virtualbox do |vb, override|
        config.vm.box = vm_box
        override.vm.network :private_network, ip: "#{info[:ip]}"

        vb.name = 'vagrant-' + hostname
        vb.customize ["modifyvm", :id, "--memory", info[:mem], "--cpus", info[:cpus], "--hwvirtex", "on" ]

        disk = "storage-#{hostname}.vdi"
        unless File.exist?(disk)        
          vb.customize ['createhd', '--filename', disk,'--variant', 'Fixed', '--size', 20 * 1024]
          vb.customize ['storageattach', :id, '--storagectl', 'IDE', '--port', 1, '--device', 0, '--type', 'hdd', '--medium', disk]  
        end
      end
      

      cfg.vm.provision "shell" do |s|
        ssh_insecure_key = File.readlines("#{Dir.home}/.vagrant.d/insecure_private_key").first.strip
        s.inline = <<-SHELL
          echo "Copying ansible-vm public SSH Keys to the VM"
          echo #{ssh_insecure_key} >> /home/vagrant/.ssh/id_rsa
          chown vagrant /home/vagrant/.ssh/id_rsa
          chmod 400 /home/vagrant/.ssh/id_rsa
        SHELL
      end

      # provision nodes with ansible
      if index == cluster.size - 1
        cfg.vm.provision :ansible do |ansible|
          # ansible.verbose = "vvvv"

          ansible.config_file = "./ansible.cfg"
          ansible.inventory_path = "inventory/hosts"
          ansible.playbook = "./../ansible/playbooks/bootstrap.yml"
          ansible.limit = "all"# "#{info[:ip]}" # Ansible hosts are identified by ip
        end # end provision
      end #end if

    end # end config

  end #end cluster

end #end vagrant